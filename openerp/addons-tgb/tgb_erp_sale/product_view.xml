<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="product_normal_form_view_account_inherit" model="ir.ui.view">
            <field name="name">product.product.form.account.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="account.product_normal_form_view"/>
            <field name="arch" type="xml">
            	<xpath expr="//group[@name='properties']" position="after">
          			<group string="Product Multi Company">
	                    <field name="product_multi_company_line" nolabel='1'>
	                    	<tree editable='bottom'>
	                    		<field name="company_id" domain="[('id','!=',parent.company_id)]"/>
	                    		<field name="income_acc_id" domain="[('type','=','other'),('company_id','=',company_id)]"/>
	                    		<field name="expense_acc_id" domain="[('type','=','other'),('company_id','=',company_id)]"/>
	                    		<field name="customer_tax_ids" widget="many2many_tags" domain="[('parent_id','=',False),('type_tax_use','in',['sale','all']),('company_id','=',company_id)]"/>
	                    		<field name="supplier_tax_ids" widget="many2many_tags" domain="[('parent_id', '=', False),('type_tax_use','in',['purchase','all']),('company_id','=',company_id)]"/>
	                    	</tree>
	                    </field>
	                </group>
            	</xpath>
            </field>
        </record>
        
    </data>
</openerp>
