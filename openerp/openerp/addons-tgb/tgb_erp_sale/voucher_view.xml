<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_vendor_receipt_dialog_form_inherit" model="ir.ui.view">
            <field name="name">account.voucher.form.account.inherit</field>
            <field name="model">account.voucher</field>
            <field name="inherit_id" ref="account_voucher.view_vendor_receipt_dialog_form"/>
            <field name="arch" type="xml">
            	
            	<xpath expr="//field[@name='journal_id']" position="replace">
          			 <field name="journal_id" domain="[('type','in',['bank', 'cash']),('company_id','=',company_id)]" invisible="context.get('line_type', False)" on_change="onchange_journal(journal_id, line_cr_ids, False, partner_id, date, amount, type, company_id, context)" string="Payment Method"/>
            	</xpath>
            
            	<xpath expr="//field[@name='period_id']" position="replace">
          			 <field name="period_id" domain="[('company_id','=',company_id)]"/>
            	</xpath>
            </field>
        </record>
        
    </data>
</openerp>
