<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="account_invoice_form_inherit" model="ir.ui.view">
            <field name="name">account.invoice.form.account.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
            	
            	<xpath expr="//field[@name='invoice_line']" position="before">
            		<field name="invisible_update" invisible='1'/>
            		<button name="%(action_edit_invoice)d" string="Update" type="action" attrs="{'invisible':[('invisible_update','=',True)]}" class="oe_highlight"/>
            	</xpath>
            	
            	<xpath expr="//field[@name='partner_id']" position="replace">
            		<field string="Customer" name="partner_id" on_change="onchange_partner_id(type,partner_id,date_invoice,payment_term, partner_bank_id,company_id)" groups="base.group_user" context="{'search_default_customer':1, 'show_address': 1}" options="{&quot;always_reload&quot;: True}" domain="[('customer', '=', True),('company_id','=',company_id)]"/>
            	</xpath>
            	
            </field>
        </record>
        
    </data>
</openerp>
