<openerp>
    <data>
        <record id="view_order_form_audionote_inherit" model="ir.ui.view">
            <field name="name">sale.order.form.audionote.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <xpath
                        expr="//notebook/page[@string='Order Lines']/field[@name='order_line']/tree/field[@name='product_id']"
                        position="after">
                    <field name="suggested_price"/>
                    <field name="tgb_length" invisible="1"/>
                </xpath>
                <xpath
                        expr="//notebook/page[@string='Order Lines']/field[@name='order_line']/tree/field[@name='price_subtotal']"
                        position="after">
                    <field name="subtotal_template" on_change="subtotal_template_change(subtotal_template,tax_id,product_uom_qty,product_id,parent.partner_id,discount,parent.pricelist_id.currency_id)" invisible="1"/>
                    <field name="total_temp" on_change="total_temp_change(total_temp,tax_id,product_uom_qty,product_id,parent.partner_id,discount,parent.pricelist_id.currency_id)"/>
                </xpath>

                <xpath
                        expr="//notebook/page[@string='Order Lines']/field[@name='order_line']/tree/field[@name='price_subtotal']"
                        position="attributes">
                    <attribute name="invisible">0</attribute>
                </xpath>



                <!--<xpath-->
