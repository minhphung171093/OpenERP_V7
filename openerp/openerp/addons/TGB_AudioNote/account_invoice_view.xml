<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="tgb_invoice_form" model="ir.ui.view">
            <field name="name">tgb.account.invoice.form</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="model">account.invoice</field>
            <field name="priority">36</field>
            <field name="arch" type="xml">
                <field name="move_id" position="after">
                    <field name="total_payment_fee"/>
                </field>
                <field name="fiscal_position" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
                <field name="journal_id" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
                <field name="account_id" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
                <field name="fiscal_position" position="after">
                    <field name="sale_person_id"/>
                </field>
                <!--<xpath-->
                <!--expr="//notebook/page[@string='Payments']/field[@name='payment_ids']/tree/field[@name='currency_id']"-->
                <!--position="after">-->
                <!--<field name = "tgb_payment_fee" widget="monetary" options="{'currency_field': 'currency_id'}" />-->
                <!--</xpath>-->

            </field>
        </record>


        <record id="tgb_supplier_invoice_form" model="ir.ui.view">
            <field name="name">tgb.supplier.account.invoice.form</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="model">account.invoice</field>
            <field name="priority">36</field>
            <field name="arch" type="xml">
                <xpath
                        expr="//notebook/page[@string='Invoice']/div/field[@name='tax_line']/tree/field[@name='account_id']"
                        position="after">
                    <field name="base_code_id"/>
                    <field name="tax_code_id"/>
                </xpath>
            </field>
        </record>


    </data>
</openerp>
