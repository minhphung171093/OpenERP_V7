<?xml version="1.0"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="audionote_sale_deposit_form">
            <field name="name">sale.deposit.form</field>
            <field name="model">sale.deposit</field>
            <field name="arch" type="xml">
                <form string="resource_planning_period" version="7.0">
                    <sheet>
                        <group col="4">
                            <field name="customer_id"/>
                            <field name="amount"/>
                            <field name="journal_id"/>
                            <field name="period_id"/>
                            <field name="date"/>
                            <field name="cheque_no"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="audionote_sale_deposit_tree">
            <field name="name">sale.deposit.tree</field>
            <field name="model">sale.deposit</field>
            <field name="arch" type="xml">
                <tree string="audionote_sale_deposit_tree" version="7.0" editable="top">
                    <field name="amount"/>
                    <field name="journal_id"/>
                    <field name="period_id"/>
                    <field name="date"/>
                    <field name="cheque_no"/>
                </tree>
            </field>
        </record>

    </data>
</openerp>
