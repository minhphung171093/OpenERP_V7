<openerp>
    <data>
        <record id="tgb_attendance_import_view" model="ir.ui.view">
            <field name="name">Tgb Attendance Import</field>
            <field name="model">attendance.import</field>
            <field name="arch" type="xml">
                <form string="Import Attendance" version="7.0">
                    <sheet>
                        <group>
                            <field name="period_id"/>
                            <field name="file"/>
                            <button name="do" type="object" string="Import Attendance"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="tgb_attendance_import_action2">
            <field name="name">Attendance Report</field>
            <field name="view_id" ref="tgb_attendance_import_view"/>
            <field name="res_model">attendance.import</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="usage">menu</field>
            <field name="target">new</field>
        </record>
        <menuitem id="tgb_attendance_import_menu" action="tgb_attendance_import_action2" name="Import Attendances"
                  parent="hr.menu_hr_root" sequence="10" groups="base.group_hr_attendance"/>
        <menuitem id="tgb_attendance_import_menu2" action="tgb_attendance_import_action2" name="Import Attendances"
                  parent="tgb_attendance_import_menu" sequence="10" groups="base.group_hr_attendance"/>


    </data>
</openerp>
