<openerp>
    <data>
        <record id="TGB_hr_timesheet_sheet_form" model="ir.ui.view">
            <field name="name">TGB.HR.Timesheet.sheet</field>
            <field name="model">hr_timesheet_sheet.sheet</field>
            <field name="inherit_id" ref="hr_timesheet_sheet.hr_timesheet_sheet_form"/>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <xpath
                        expr="//notebook/page[@string='Details']/field[@name='timesheet_ids']/tree/field[@name='unit_amount']"
                        position="after">
                    <field name="shift"/>
                    <field name="box"/>
                    <field name="day_wage" onchange="onchange_tgb_payment(day_wage,incentive,extra,advance_deduction)"/>
                    <field name="incentive" onchange="onchange_tgb_payment(day_wage,incentive,extra,advance_deduction)"/>
                    <field name="extra" onchange="onchange_tgb_payment(day_wage,incentive,extra,advance_deduction)"/>
                    <field name="gross_payment"/>
                    <field name="advance_deduction" onchange="onchange_tgb_payment(day_wage,incentive,extra,advance_deduction)"/>
                    <field name="net_payment"/>
                </xpath>
                <xpath
                        expr="//notebook/page[@string='Details']/field[@name='timesheet_ids']/form/field[@name='unit_amount']"
                        position="after">
                    <field name="shift"/>
                    <field name="box"/>
                    <field name="day_wage" onchange="onchange_tgb_payment(day_wage,incentive,extra,advance_deduction)"/>
                    <field name="incentive" onchange="onchange_tgb_payment(day_wage,incentive,extra,advance_deduction)"/>
                    <field name="extra" onchange="onchange_tgb_payment(day_wage,incentive,extra,advance_deduction)"/>
                    <field name="gross_payment"/>
                    <field name="advance_deduction" onchange="onchange_tgb_payment(day_wage,incentive,extra,advance_deduction)"/>
                    <field name="net_payment"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
