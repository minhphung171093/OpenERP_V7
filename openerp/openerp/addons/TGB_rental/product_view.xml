<openerp>
    <data>
        <record id="TGB_rental_product_view" model="ir.ui.view">
            <field name="name">tgb.product.view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="priority">36</field>
            <field name="arch" type="xml">
                <notebook position="inside">
                     <page string="Product list">
                            <separator string="Sale Product"/>
                                 <field name="sale_product_ids"/>
                           <separator string="Rental Product"/>
                                 <field name="rental_product_ids"/>
                            <separator string="Repair Product"/>
                                <field name="repair_product_ids"/>
                    </page>
                    <page string="Rental Price">
                       <separator string="Price list"/>
                           <field name="rental_price"/>
                    </page>
                </notebook>
            </field>
        </record>

         <record id="tgb_product_serial_form" model="ir.ui.view">
            <field name="name">product serial form</field>
            <field name="model">product.product.serial</field>
             <field name="priority">4</field>
            <field name="arch" type="xml">
                <form string="Product serial" version="7.0">
                    <group>
                    <field name="name" string="Serial Number"/>
                    <field name="warranty_number" string="Warranty Number"/>
                    </group>
                </form>
            </field>
        </record>


        <record id="tgb_product_serial_tree" model="ir.ui.view">
            <field name="name">product serial tree</field>
            <field name="model">product.product.serial</field>
            <field name="priority">4</field>
            <field name="arch" type="xml">
                <tree string="Product serial" editable="top">
                     <field name="name" string="Serial Number"/>
                    <field name="warranty_number" string="Warranty Number"/>
                </tree>
            </field>
        </record>

         <record id="tgb_produce_price_form" model="ir.ui.view">
            <field name="name">Product price</field>
            <field name="model">product.product.rentalprice</field>
             <field name="priority">4</field>
            <field name="arch" type="xml">
                <form string="Product price" version="7.0">
                    <field name="days" string="Number of day"/>
                    <field name="price" string="Price"/>
                </form>
            </field>
        </record>

        <record id="tgb_produce_price_tree" model="ir.ui.view">
            <field name="name">Product price</field>
            <field name="model">product.product.rentalprice</field>
             <field name="priority">4</field>
            <field name="arch" type="xml">
                <tree string="Product price" editable="bottom">
                    <field name="days" string="Number of day"/>
                    <field name="price" string="Price"/>
                </tree>
            </field>
        </record>

        <record id="TGB_rental_order_form" model="ir.ui.view">
            <field name="name">tgb rental form</field>
            <field name="model">rental.order</field>
            <field name="priority">36</field>
            <field name="arch" type="xml">
                <form string="Product price" version="7.0">
                     <header>
                         <button  name="confirm_order" states="draft" type="object" string="Confirm Order"/>
                         <button  name="cancel_order" states="done,confirm,manual,wait" type="object" string="Cancel Order"/>
                         <button  name="create_invoice" states="confirm,manual" type="object" string="Create Invoice"/>
                         <button name="extend_order" states="confirm,manual,wait" type="object" string="Extend Order"/>
                         <button name="receive_product" states="wait" type="object" string="Receive Product"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,manual,wait,done,cancel"/>
                       </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                         <field name="order_create_date" string="Created date"/>
                         <field name="from_date" string="From date" on_change="onchange_day(from_date,to_date)"/>
                        <field name="to_date" string="To Date" on_change="onchange_day(from_date,to_date)" />
                            <field name="extend_date"/>
                        <field name="invoiced_date" string="Invoiced Date"/>
                            <field name="shop_id" on_change="onchange_shop_id(shop_id, context)" widget="selection"/>
                            <field name="pricelist_id" invisible="1"/>
                        <field name="partner_id" string="Customer" domain="[('customer','=',True)]"/>
                         <field name="number_of_day" invisible="1"/>
                        </group>
                    <notebook>
                        <page string="Product">
                             <separator string="Product List"/>
                              <field name="rental_lines"/>
                            <group>
                             <field name="amount_total" string="Amount total"/>
                            </group>
                        </page>
                        <page string="Other Information">
                             <separator string="Invoices"/>
                           <field name="invoice_ids"/>
                            <separator string="Delivery Order"/>
                           <field name="picking_ids"/>
                        </page>
                        <page string="Remarks"><field name="note"/></page>
                    </notebook>
</sheet>
                </form>
            </field>
        </record>

         <record id="TGB_rental_order_tree" model="ir.ui.view">
            <field name="name">tgb.product.view</field>
            <field name="model">rental.order</field>
            <field name="priority">36</field>
            <field name="arch" type="xml">
                <tree string="Product price">
                         <field name="order_create_date"/>
                        <field name="name"/>
                       <field name="partner_id"/>
                         <field name="from_date"/>
                        <field name="to_date"/>
                        <field name="invoiced_date"/>
                         <field name="amount_total"/>
                        <field name="state"/>
                </tree>
            </field>
        </record>

            <record id="TGB_rental_order_line_form" model="ir.ui.view">
            <field name="name">rental line form</field>
            <field name="model">rental.order.line</field>
            <field name="priority">36</field>
            <field name="arch" type="xml">
                <form string="Product price" version="7.0"><group>
                         <field name="product_id" string="Product" on_change="onchange_product_id(product_id,parent.number_of_day,parent.from_date,parent.to_date,product_uom_qty)"/>
                       <field name="product_serial" string="Serial Number" domain="[('rental_product_id','=',product_id)]" context="{'rental_product_id':product_id}"/>
                        <field name="product_uom_qty" invisible="1" on_change="onchange_product_id(product_id,parent.number_of_day,parent.from_date,parent.to_date,product_uom_qty)"/>
                    <field name="product_uom" invisible="1"/>
                    <field name="price" string="Price"/></group>
                </form>
            </field>
        </record>

        <record id="TGB_rental_order_line_tree" model="ir.ui.view">
            <field name="name">rental line tree</field>
            <field name="model">rental.order.line</field>
            <field name="priority">36</field>
            <field name="arch" type="xml">
                <tree string="Product price" editable="top">
                         <field name="product_id" on_change="onchange_product_id(product_id,parent.number_of_day,parent.from_date,parent.to_date,product_uom_qty)"/>
                       <field name="product_serial" domain="[('rental_product_id','=',product_id)]" context="{'rental_product_id':product_id}"  />
                       <field name="product_uom_qty" invisible="1" on_change="onchange_product_id(product_id,parent.number_of_day,parent.from_date,parent.to_date,product_uom_qty)"/>
                    <field name="product_uom" invisible="1"/>
                    <field name="price"/>
                </tree>
            </field>
        </record>
  <record id="tgb_rental_order_action" model="ir.actions.act_window">
            <field name="name">Rental Order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">rental.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="TGB_rental_order_tree"/>
        </record>
        <menuitem name="Rental Order"
               id="tgb_rental_order_menu"
            parent="base.menu_sales"
                action="tgb_rental_order_action"/>
    </data>
</openerp>
