<?xml version="1.0"?>
<openerp>
    <data>

        <!-- Export Employee Summary Report View -->
        <record id="view_ihrms_export_employee_data_record_xls_report_wiz" model="ir.ui.view">
            <field name="name">export.employee.data.record.xls.form</field>
            <field name="model">export.employee.data.record.xls</field>
            <field name="arch" type="xml">
                <form string="Excel Export" version="7.0">
                    <group>
	                    <field name="name" invisible="1"/>
	                    <field name="file" colspan="4" filename="name"/>
                    </group>
                    <footer>
                        <button special="cancel" string="Cancel" icon="gtk-cancel" colspan="2"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Export Employee Summary View Action and Menu -->
        <record model="ir.ui.view" id="view_export_employee_summary_form">
            <field name="name">view.export.employee.summary.wiz.form</field>
            <field name="model">export.employee.summary.wiz</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Export Employees">
                    <notebook colspan="4">
                        <page string="Select Employee">
                            <field name="employee_ids" colspan="4" nolabel="1" context="{'active_test': False}">
                                <tree string="Employees">
                                    <field name="name"/>
                                    <field name="department_id"/>
                                    <field name="work_email"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Employee Information">
                            <field name="user_id" />
	                        <field name="active" />
	                        <field name="department" />
	                        <field name="direct_manager" />
	                        <field name="indirect_manager" />
                        </page>
                        <page string="Personal Information">
                            <field name="personal_information" on_change="onchange_personal_information(personal_information)"/>
                            <group colspan="4" col="8" >
		                        <separator string="Social IDs" colspan="2" />
		                        <separator string="Status" colspan="2"/>
		                        <separator string="Contact Information" colspan="2"/>
		                        <separator string="Other Information" colspan="2"/>
		                        <group colspan="2" col="2">
		                            <field name="identification_id" />
		                            <field name="passport_id" />
		                            <field name="otherid" />
		                        </group>
		                        <group colspan="2" col="2">
		                            <field name="gender" />
		                            <field name="martial" />
		                            <field name="nationality" />
		                            <field name="dob" />
		                            <field name="pob" />
		                            <field name="age" />
		                        </group>
		                        <group colspan="2" col="2">
		                            <field name="home_address" />
		                            <field name="country_id" />
		                            <field name="state_id" />
		                            <field name="city_id" />
		                            <field name="phone" />
		                            <field name="mobile" />
		                            <field name="email" />
		                        </group>
		                        <group colspan="2" col="2">
		                            <field name="race_id" />
		                            <field name="dialet" />
		                            <field name="religion" />
		                            <field name="driving_licence" />
		                            <field name="own_car" />
		                            <field name="emp_type_id" />
		                        </group>
		                    </group>
                        </page>
                        <page string="Appraisal">
                            <field name="evaluation_plan_id" />
                            <field name="evaluation_date" />
                        </page>
                        <page string="Family Particulars">
                            <field name="family_ids" />
                        </page>
                        <page string="Employment History">
                            <field name="employment_history_ids" />
                        </page>
                        <page string="Educational Information">
                            <separator string="Education" colspan="4" />
                            <field name="edu_ids" />
                            <separator string="Language" colspan="4" />
                            <field name="language_ids" />
                            <separator string="Computer Knowledge and Skills" colspan="4" />
                            <field name="com_prog_know" />
                            <field name="shorthand" />
                            <field name="courses" />
                            <field name="typing" />
                            <field name="other_know" />
                        </page>
                        <page string="Job">
                            <field name="job_title" />
                            <field name="emp_status" />
                            <field name="join_date" />
                            <field name="confirm_date" />
                            <field name="date_changed" />
                            <field name="changed_by" />
                            <field name="date_confirm_month" />
                        </page>
                        <page string="Categories">
                            <field name="category_ids" />
                        </page>
                        <page string="Immigration">
                            <field name="immigration_ids" />
                        </page>
                        <page string="Training">
                            <field name="tarining_ids" />
                        </page>
                        <page string="Leave History">
                            <field name="emp_leave_ids" />
                        </page>
                        <page string="Extra Information">
                            <field name="health_condition" />
	                        <field name="bankrupt" />
	                        <field name="suspend_employment" />
	                        <field name="court_law" />
	                        <field name="about" />
                        </page>
                        <page string="References">
                            <field name="reference_ids" />
                        </page>
                        <page string="Bank Details">
                            <field name="bank_detail_ids" />
                        </page>
                        <page string="Notification">
                            <field name="emp_noty_leave" />
	                        <field name="pending_levae_noty" />
	                        <field name="receive_mail_manager" />
                        </page>
                        <page string="National Service">
                            <field name="national_service_ids" />
                        </page>
                        <page string="Notes">
                            <field name="notes" />
                        </page>
                        <page string="Payroll">
                            <field name="payslip" />
                            <field name="contract" />
                        </page>
                    </notebook>
                    <separator string="" colspan="4" />
                    <button special="cancel" string="Cancel" icon="gtk-cancel" colspan="2"/>
                    <button name="export_employee_summary_xls" string="Save" type="object" icon="gtk-ok" colspan="2"/>
                </form>
            </field>
        </record>
        
        <record id="hr_export_employee_summary_action" model="ir.actions.act_window">
            <field name='name'>Export</field>
            <field name='res_model'>export.employee.summary.wiz</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>form</field>
            <field name="target">new</field>
        </record>
        
        <menuitem action="hr_export_employee_summary_action" id="hr_export_employee_summary_menu" sequence="15" groups="base.group_hr_manager" parent="hr.menu_open_view_employee_list_my"/>

    </data>
</openerp>