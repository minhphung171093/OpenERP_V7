<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- CIMB Bank Text File -->
        <record id="view_cimb_bank_text_file_wizard" model="ir.ui.view">
            <field name="name">view.cimb.bank.text.file.wiz</field>
            <field name="model">cimb.bank.text.file</field>
            <field name="arch" type="xml">
                <form string="CIMB Bank" version="7.0">
                    <group>
	                    <field name="source_account_number" required="1"/>
	                    <field name="account_name" required="1"/>
	                    <field name="remark" required="1"/>
	                    <field name="transaction_date" required="1"/>
	                    <field name="period_id" required="1"/>
                    </group>
                    <separator string="" colspan="4"/>
                    <footer>
	                    <button special="cancel" string="Cancel" icon="gtk-cancel" colspan="2"/>
	                    or
	                    <button name="download_cimb_bank_txt_file" string="Save" type="object" icon="gtk-ok" colspan="2"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_print_cimb_bank_txt_file" model="ir.actions.act_window">
            <field name="name">CIMB Bank Text File</field>
            <field name="res_model">cimb.bank.text.file</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="binary_cimb_bank_text_file_wizard_view" model="ir.ui.view">
            <field name="name">view.binary.cimb.bank.text.file.wizard</field>
            <field name="model">binary.cimb.bank.text.file.wizard</field>
            <field name="arch" type="xml">
                <form string="View CIMB Bank txt File" version="7.0">
                    <group>
                        <field name="cimb_bank_txt_file" filename="name"/>
                    </group>
                    <separator string="" colspan="4"/>
                    <footer>
                        <button special="cancel" string="Cancel" icon="gtk-cancel" colspan="2"/>
                    </footer>
                </form>
            </field>
        </record>

        <menuitem action="action_print_cimb_bank_txt_file" id="menu_print_cimb_bank_txt_file" parent="menu_report_payroll1_misc" sequence="4"/>

    </data>
</openerp>