        <record model="ir.ui.view" id="view_order_line_tree2">
            <field name="name">Sale Lines</field>
            <field name="model">sale.order.line</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="sale.view_order_line_tree"/>
