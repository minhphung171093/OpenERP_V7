<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="dksquare_company_view" model="ir.ui.view">
            <field name="name">dksquare.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="DK Square Addidional Information">
                        <group col="4">
                            <field name="use_tax"/>
                            <newline/>
                            <group col="4" colspan="4" attrs="{'invisible':[('use_tax','=',False)]}">
                                <separator string="Company Taxes" colspan="4"/>
                                <field name="dk_tax_id"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>

    </data>
</openerp>