<?xml version="1.0"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="tgb_construction_dk_contract_type_form_view">
            <field name="name">dk.contract.type.form</field>
            <field name="model">dk.contract.type</field>
            <field name="arch" type="xml">
                <form string="Contract Type" version="7.0">
                    <sheet>
                        <group col="4">
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="tgb_construction_dk_contract_type_tree_view">
            <field name="name">dk.contract.type.tree</field>
            <field name="model">dk.contract.type</field>
            <field name="arch" type="xml">
                <tree string="dk_contract_type" editable="top">
                    <field name="name"/>
                    <field name="description"/>

                </tree>
            </field>
        </record>
        <record id="tgb_construction_dk_contract_type_action" model="ir.actions.act_window">
            <field name="name">Contract Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">dk.contract.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

        <menuitem name="Contract Type"
                  id="dk_square_contract_type_menu" parent="menu_dk_square_configuration"
                  action="tgb_construction_dk_contract_type_action"/>

    </data>
</openerp>
