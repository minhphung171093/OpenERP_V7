<?xml version="1.0"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="tgb_construction_dk_location_form_view">
            <field name="name">dk.location.form</field>
            <field name="model">dk.location</field>
            <field name="arch" type="xml">
                <form string="Location" version="7.0">
                    <sheet>
                        <group col="4">
                            <field name="code"/>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="tgb_construction_dk_location_tree_view">
            <field name="name">dk.location.tree</field>
            <field name="model">dk.location</field>
            <field name="arch" type="xml">
                <tree string="dk_location" editable="top">
                    <field name="code"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="tgb_construction_dk_location_action" model="ir.actions.act_window">
            <field name="name">Location</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">dk.location</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

        <menuitem name="DK Location"
                  id="dk_square_locationt_menu" parent="menu_dk_square_configuration"
                  action="tgb_construction_dk_location_action"/>


    </data>
</openerp>
