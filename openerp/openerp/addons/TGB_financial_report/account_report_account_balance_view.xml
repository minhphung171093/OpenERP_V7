<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>

        <record id="TGB_account_report_balance_view" model="ir.ui.view">
            <field name="name">Aged Partner Balance</field>
            <field name="model">account.aged.trial.balance</field>
            <field name="inherit_id" ref="account.account_aged_balance_view"/>
            <field name="arch" type="xml">
                <field name ="journal_ids" position ="after">
                    <separator string="Partners" colspan="4" />
                    <field name="partners" colspan="4" rowspan="12" nolabel="1"/>
                </field>
            </field>
        </record>

        <record id="account.action_account_aged_balance_view" model="ir.actions.act_window">
             <field name="name">Aged Partner Balance</field>
             <field name="res_model">account.aged.trial.balance</field>
             <field name="type">ir.actions.act_window</field>
             <field name="view_type">form</field>
             <field name="view_mode">tree,form</field>
             <field name="view_id" ref="TGB_account_report_balance_view"/>
             <field name="context">{}</field>
             <field name="target">new</field>
       </record>


    </data>
</openerp>
