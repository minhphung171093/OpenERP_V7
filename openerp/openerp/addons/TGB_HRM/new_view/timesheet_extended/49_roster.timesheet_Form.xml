<?xml version="1.0"?>
<openerp>
    <data>
        <record id="roster_timesheet_form_view" model="ir.ui.view">
            <field name="name">roster.timesheet.form</field>
            <field name="model">roster.timesheet</field>
            <field name="type">form</field>
            <field eval="16" name="priority"/>
            <field name="arch" type="xml">
                <form string="Roster Timesheet" version="7.0">
                    <sheet>
                        <group colspan="4" col="4">
                            <field name="employee_id"/>
                            <field name="counter_id"/>
                        </group>
                        <group colspan="4" col="6">
                            <field name="current_date"/>
                            <field name="time_from"/>
                            <field name="time_to"/>
                        </group>
                        <separator colspan="4"/>
                        <group col="8" colspan="4">
                            <field name="state"/>
                            <button name="case_reset" string="Reset to Unconfirmed" states="open,done" type="object"
                                    icon="gtk-convert" groups="timesheet_extended.roster_timesheet_manager_group"/>
                            <button name="case_close" string="Done" states="open" type="object" icon="gtk-jump-to"
                                    groups="timesheet_extended.roster_timesheet_manager_group"/>
                            <button name="case_open" string="Confirm" states="draft" type="object"
                                    icon="gtk-go-forward"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>