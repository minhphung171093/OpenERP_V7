<?xml version="1.0"?>
<openerp>
    <data>
        <record id="edit_employee_news_form" model="ir.ui.view">
            <field name="name">employee.news.form</field>
            <field name="model">employee.news</field>
            <field name="type">form</field>
            <field eval="16" name="priority"/>
            <field name="arch" type="xml">
                <form string="News" version="7.0">
                    <group>
                        <field name="subject"/>
                        <field name="date"/>
                    </group>
                    <notebook colspan="4">
                        <page string="Description">
                            <group>
                                <field name="description" nolabel="1" colspan="4"/>
                            </group>
                        </page>
                        <page string="Departments">
                            <group>
                                <field name="department_ids" nolabel="1" colspan="4"/>
                            </group>
                        </page>
                        <page string="Users">
                            <group>
                                <field name="user_ids" nolabel="1" colspan="4"/>
                            </group>
                        </page>
                    </notebook>
                    <button string="Send Mail" type="object" name="news_update" icon="gtk-ok" colspan="2"/>
                </form>
            </field>
        </record>
    </data>
</openerp>