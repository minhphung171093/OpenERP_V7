!--                            <field name="employment_history_ids" nolabel="1" colspan="4"/>--> <!--                    </page>-->
                        <page string="Educational Information"> <!--                        <group string="Education" colspan="4">--> <!--                                <separator colspan="4"/>--> <!--                                <field name="edu_ids" nolabel="1" colspan="4"/>--> <!--                        </group>--> <!--                        <group string="Language Proficiency"  colspan="4">--> <!--                            <separator colspan="4"/>--> <!--                              <field name="language_ids" nolabel="1" colspan="4"/>--> <!--                        </group>-->
                            <group string="Computer Knowledge and Skills" colspan="4">
                                <separator colspan="4"/>
                                <group col="4" colspan="2">
                                    <field name="comp_prog_knw"/>
                                    <field name="typing"/>
                                    <field name="shorthand"/>
                                    <field name="other_know"/>
                                    <field name="course"/>
                                </group>
                            </group>
                        </page>
                        <page string="Job">
                            <group>
                                <field name="job_id" string="Job" domain="[('state','=','open')]" colspan="4"/>
                                <field name="coach_id" invisible="1"/>
                                <field name="emp_status" on_change="onchange_employee_status(emp_status)"/>
                                <field name="join_date" string="Date Joined"/>
                                <field name="confirm_date"/>
                                <!--                            <field name="cessation_date" />-->
                                <field name="last_date" attrs="{'invisible':[('emp_status', '!=', 'in_notice')]}"/>
                                <field name="rem_days" attrs="{'invisible':[('emp_status', '!=', 'in_notice')]}"/>
                                <field name="history_ids" nolabel="1" colspan="4">
                                    <tree string="History of Employee" version="7.0">
                                        <field name="job_id"/>
                                        <field name="emp_status"/>
                                        <field name="join_date"/>
                                        <field name="confirm_date" string="Date Confirmation"/>
                                        <field name="date_changed"/>
                                        <field name="cessation_date"/>
                                        <field name="user_id"/>
                                    </tree>
                                    <form string="History of Employee" version="7.0">
                                        <group col="4" colspan="2">
                                            <field name="job_id"/>
                                            <field name="emp_status"/>
                                            <field name="join_date"/>
                                            <field name="confirm_date" string="Date Confirmation"/>
                                            <field name="date_changed"/>
                                            <field name="cessation_date"/>
                                            <field name="user_id"/>
                                        </group>
                                    </form>
                                </field>
                            </group>
                        </page>
                        <page string="Categories">
                            <field name="category_ids" nolabel="1" colspan="4"/>
                        </page>
                        <page string="Immigration" attrs="{'invisible':[('hr_manager','=',False)]}">
                            <field name="immigration_ids" nolabel="1" colspan="4">
                                <tree string="Immigration" version="7.0">
                                    <field name="documents"/>
                                    <field name="number"/>
                                    <field name="issue_date"/>
                                    <field name="exp_date"/>
                                    <field name="eligible_status"/>
                                    <field name="eligible_review_date"/>
                                    <field name="issue_by"/>
                                </tree>
                                <form string="Immigration" version="7.0">
                                    <group col="4" colspan="2">
                                        <field name="documents"/>
                                        <field name="number"/>
                                        <field name="issue_date"/>
                                        <field name="exp_date"/>
                                        <field name="eligible_status"/>
                                        <field name="eligible_review_date"/>
                                        <field name="issue_by"/>
                                        <separator string="Comments" colspan="4"/>
                                        <field name="comments" nolabel="1" colspan="4"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Training Workshop">
                            <field name="training_ids" nolabel="1" colspan="4">
                                <tree string="Training Workshop" version="7.0">
                                    <field name="tr_title"/>
                                    <field name="tr_institution"/>
                                    <field name="tr_date"/>
                                </tree>
                                <form string="Training Workshop" version="7.0">
                                    <group col="4" colspan="2">
                                        <field name="tr_title" colspan="4"/>
                                        <field name="tr_institution"/>
                                        <field name="tr_date"/>
                                        <field name="training_attachment"/>
                                    </group>
                                    <separator string="Comments" colspan="4"/>
                                    <group>
                                        <field name="comments" nolabel="1" colspan="4"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Leave History">
                            <field name="employee_leave_ids" nolabel="1" colspan="4"
                                   readonly="1"> <!-- attrs="{'invisible':[('hr_manager','=',False),('user_id','!=',uid),('parent_user_id','!=',uid),('parent_user_id2','!=',uid)]}" context="{'holiday_donot_compute_domain': True}" -->
                                <tree string="Leave History" version="7.0">
                                    <field name="date_from" widget="date"/>
                                    <field name="date_to" widget="date"/>
                                    <field name="type"/>
                                    <field name="holiday_status_id"/>
                                    <field name="number_of_days_temp"/>
                                    <field name="state"/>
                                </tree>
                                <form string="Leave Request" version="7.0">
                                    <group col="8" colspan="4">
                                        <field name="name"
                                               attrs="{'readonly':[('state','!=','draft'),('state','!=','confirm')]}"/>
                                        <field name="holiday_type" on_change="onchange_type(holiday_type)"
                                               attrs="{'readonly':[('state','!=','draft')]}" width="130" string="Mode"
                                               groups="base.group_hr_manager"/>
                                        <group attrs="{'invisible':[('holiday_type','=','employee')]}">
                                            <field name="category_id"
                                                   attrs="{'required':[('holiday_type','=','category')], 'readonly':[('state','!=','draft')]}"/>
                                        </group>
                                        <group attrs="{'invisible':[('holiday_type','=','category')]}">
                                            <field name="employee_id"
                                                   attrs="{'required':[('holiday_type','=','employee')]}"/>
                                        </group>
                                    </group>
                                    <notebook colspan="4">
                                        <page string="General">
                                            <field name="holiday_status_id"
                                                   on_change="onchange_sec_id(holiday_status_id)"
                                                   context="{'employee_id':employee_id}"/>
                                            <field name="department_id"
                                                   attrs="{'readonly':[('holiday_type','=','category')]}"/>
                                            <field name="date_from" widget="date"
                                                   on_change="onchange_date_from(date_to, date_from, leave_type)"
                                                   required="1"/>
                                            <field name="date_to" widget="date"
                                                   on_change="onchange_date_from(date_to, date_from)" required="1"/>
                                            <field name="number_of_days_temp"/>
                                            <field name="double_validation" invisible="1"/>
                                            <newline/>
                                            <field name="manager_id"/>
                                            <field name="manager_id2"
                                                   attrs="{'invisible':[('double_validation', '!=', True)]}"/>
                                            <separator string="Reasons" colspan="4"/>
                                            <field name="notes" nolabel="1" colspan="4"/>
                                            <newline/>
                                            <field name="state" widget="statusbar"
                                                   statusbar_visible="draft,confirm,validate"
                                                   colspan="2"/>
                                        </page>
                                    </notebook>
                                </form>
                            </field>
                        </page>
                        <page string="Extra Information">
                            <group colspan="4" string="Health Condition">
                                <label string="Are you suffering from any physical disability or illness that requires you to be medication for a prolonged period?"/>
                                <newline/>
                                <group name="Physical Stability" colspan="4">
                                    <field name="physical_stability" string="Yes" colspan="1"
                                           on_change="onchange_health_yes(physical_stability)"/>
                                    <field name="physical_stability_no"
                                           on_change="onchange_health_no(physical_stability_no)"/>
                                </group>
                                <newline/>
                                <label string="If YES Please Specify" colspan="3"/>
                                <newline/>
                                <field name="physical" attrs="{'invisible': [('physical_stability','=',False)]}"
                                       colspan="4" nolabel="1"/>
                            </group>
                            <group colspan="4" string="Important Information">
                                <label string="Have you ever been convicted in a court of law in any country?"/>
                                <newline/>
                                <group name="Court of Law" colspan="2">
                                    <field name="court_b" string="Yes" on_change="onchange_court_yes(court_b)"/>
                                    <field name="court_no" colspan="1" on_change="onchange_court_no(court_no)"/>
                                </group>
                                <newline/>
                                <label string="If YES Please Specify" colspan="3"/>
                                <newline/>
                                <field name="court" attrs="{'invisible': [('court_b','=',False)]}" colspan="4"
                                       nolabel="1"/>
                                <newline/>
                                <label string="Have you ever been dismissed or suspended from employement?"/>
                                <newline/>
                                <group name="Dismissed or Suspended" colspan="4">
                                    <field name="dismissed_b" string="Yes"
                                           on_change="onchange_dismissed_yes(dismissed_b)"/>
                                    <field name="dismissed_no" colspan="1"
                                           on_change="onchange_dismissed_no(dismissed_no)"/>
                                </group>
                                <newline/>
                                <label string="If YES Please Specify" colspan="3"/>
                                <newline/>
                                <field name="dismiss" attrs="{'invisible': [('dismissed_b','!=',True)]}" colspan="4"
                                       nolabel="1"/>
                                <label string="Have you ever been declared a bankrupt?"/>
                                <newline/>
                                <group name="Bankrupt" colspan="4">
                                    <field name="bankrupt_b" string="Yes"
                                           on_change="onchange_bankrupt_yes(bankrupt_b)"/>
                                    <field name="bankrupt_no" colspan="1"
                                           on_change="onchange_bankrupt_no(bankrupt_no)"/>
                                </group>
                                <newline/>
                                <label string="If YES Please Specify" colspan="3"/>
                                <newline/>
                                <field name="bankrupt" attrs="{'invisible': [('bankrupt_b','!=',True)]}" colspan="4"
                                       nolabel="1"/>
                            </group>
                            <!--                        <group string="References" colspan="4">--> <!--                            <field name="reference_ids" nolabel="1" colspan="4"/>--> <!--                        </group>-->
                            <separator colspan="4" string="About Yourself"/>
                            <field name="about" colspan="4" nolabel="1"/>
                        </page>
                        <page string="Bank Details">
                            <field name="bank_detail_ids" nolabel="1"/>
                        </page>
                        <page string="Notification">
                            <group>
                                <field name="is_daily_notificaiton_email_send"/>
                                <field name="is_pending_leave_notificaiton"/>
                                <field name="is_all_final_leave"/>
                            </group>
                        </page>
                        <!--                    <page string="National Service" attrs="{'invisible':[('hr_manager','=',False)]}">--> <!--                        <group>--> <!--                            <field name="national_service_ids" nolabel="1" colspan="4" attrs="{'invisible':[('hr_manager','=',False)]}"/>--> <!--                        </group>--> <!--                    </page>-->
                        <page string="Notes">
                            <group>
                                <field colspan="4" nolabel="1" name="notes"/>
                            </group>
                        </page>
                    </xpath>
                    <!--                </notebook>-->
            </field>
        </record>
    </data>
</openerp>