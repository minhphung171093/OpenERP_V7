                    <field name="parent_id" position="replace">
                        <group colspan="4">
                            <field name="hr_manager" invisible="1"/>
                            <field name="parent_id"/>
                            <field name="parent_id2"/>
                            <field name="parent_user_id" invisible="1"/>
                            <field name="parent_user_id2" invisible="1"/>
                        </group>
                    </field>
                    <!--                <field name="address_home_id" position="replace">--> <!--                    <field name="address_home_id" colspan="2"  attrs="{'invisible':[('hr_manager','=',False),('user_id','!=',uid),('parent_user_id','!=',uid),('parent_user_id2','!=',uid)]}"/>--> <!--                </field>--> <!--                <notebook>-->
                    <xpath expr="/form/sheet/notebook/page[@string='Personal Information']"
