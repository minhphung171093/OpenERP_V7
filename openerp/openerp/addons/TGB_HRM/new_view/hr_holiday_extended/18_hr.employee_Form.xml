                            <field name="dialect"/>
                            <!--                        <field name="religion_id"/>-->
                            <field name="driving_licence"/>
                            <field name="car"/>
                            <field name="resume" groups="base.group_hr_manager"/>
                            <field name="employee_type_id"/>
                        </group>
                        <newline/>
                    </xpath>
