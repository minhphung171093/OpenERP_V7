                    </field>
                    <!--                <xpath expr="/form/sheet/notebook/page[@string='Public Information']" position="attributes">--> <!--                    <attribute name="attrs">{'invisible':[('hr_manager','=',False),('user_id','!=',uid),('parent_user_id','!=',uid),('parent_user_id2','!=',uid)]}</attribute>--> <!--                </xpath>--> <!--                <xpath expr="/form[@string='Employee']/group/group/field[@name='name']" position="attributes">--> <!--                    <attribute name="colspan">2</attribute>--> <!--                </xpath>-->
