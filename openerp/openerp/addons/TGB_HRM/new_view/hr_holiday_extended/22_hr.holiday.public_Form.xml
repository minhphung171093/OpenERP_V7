<?xml version="1.0"?>
<openerp>
    <data>
        <record id="hr_holiday_public_form" model="ir.ui.view">
            <field name="name">hr.holiday.public.form</field>
            <field name="model">hr.holiday.public</field>
            <field name="type">form</field>
            <field eval="16" name="priority"/>
            <field name="arch" type="xml">
                <form string="Holiday detail" version="7.0">
                    <group colspan="4" col="4">
                        <field name="name"/>
                    </group>
                    <newline/>
                    <notebook colspan="4">
                        <page string="Holidays">
                            <field name="holiday_line_ids" nolabel="1" colspan="4"/>
                        </page>
                        <page string="Email body">
                            <field name="email_body" nolabel="1" colspan="4"/>
                        </page>
                    </notebook>
                    <group colspan="3" col="6">
                        <field name="state" nolabel="1"/>
                        <button string="Reset to Draft" type="object" name="setstate_draft" states="cancelled"
                                icon="gtk-convert"/>
                        <button string="Confirm" type="object" name="setstate_confirm" states="draft" icon="gtk-yes"/>
                        <button string="Validate" type="object" name="setstate_validate" states="confirmed"
                                icon="gtk-apply"/>
                        <button string="Refuse" type="object" name="setstate_refuse" states="confirmed" icon="gtk-no"/>
                        <button string="Cancel" type="object" name="setstate_cancel"
                                states="validated,confirmed,refused" icon="gtk-cancel"/>
                    </group>
                    <newline/>
                </form>
            </field>
        </record>
    </data>
</openerp>