<?xml version="1.0"?>
<openerp>
    <data>
        <record id="view_holiday_status_tree_ext" model="ir.ui.view">
            <field name="name">hr.holidays.status.tree.ext</field>
            <field name="model">hr.holidays.status</field>
            <field name="inherit_id" ref="hr_holidays.view_holiday_status_tree"/>
            <field name="type">tree</field>
            <field eval="16" name="priority"/>
            <field name="arch" type="xml">
                <data>
                    <field name="max_leaves" position="replace">
                        <field name="max_leaves" invisible="1"/>
                    </field>
                    <xpath expr="/tree[@string='Leave Type']//field[@name='name']" position="before">
                        <field name="name2"/>
                    </xpath>
                    <xpath expr="/tree[@string='Leave Type']//field[@name='name']" position="attributes">
                        <attribute name="string">Code</attribute>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>