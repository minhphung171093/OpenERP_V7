<?xml version="1.0"?>
<openerp>
    <data>
        <record id="view_hr_contract_commission_form_inherited1" model="ir.ui.view">
            <field name="name">view.hr.contract.commission.form.inherit</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="type">form</field>
            <field eval="16" name="priority"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="/form/sheet/div/h1/field[@name='name']" position="attributes">
                        <attribute name="readonly">True</attribute>
                    </xpath>
                    <xpath expr="/form/sheet/notebook/page[@string='Work Permit']" position="after">
                        <page string="Income Tax" groups="payroll_extended.group_hr_payroll_admin">
                            <separator colspan="4" string="Income Tax"/>
                            <field name="hr_contract_income_tax_ids" nolabel="1" colspan="4"/>
                        </page>
                    </xpath>
                    <field name="employee_id" position="replace">
                        <field name="employee_id" required="True" on_change="onchange_employee_id(employee_id)"/>
                    </field>
                    <field name="wage" position="after">
                        <field name="active_employee"/>
                        <field name="wage_to_pay" required="True"/>
                        <field name="rate_per_hour" required="True"/>
                    </field>
                </data>
            </field>
        </record>
    </data>
</openerp>