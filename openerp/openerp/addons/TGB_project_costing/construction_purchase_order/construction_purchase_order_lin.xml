<?xml version="1.0"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="tgb_construction_construction_purchase_order_line_form_view">
        <field name="name">construction.purchase.order.line.form</field>
        <field name="model">construction.purchase.order.line</field>
        <field name="arch" type="xml">
            <form string="construction_purchase_order_line" version="7.0">
            <sheet>
                <group col="4">
                    <field name="type"/>
                    <field name="product_id" required="1"/>
                    <field name="remarks_description"/>
                    <field name="qty"/>
                    <field name="uom"/>
                    <field name="pack_size"/>
                    <field name="no_of_pack"/>
                    <field name="sales_tax"/>
                    <field name="unit_cost"/>
                    <field name="location_id"/>
                    <field name="discount_percent" readonly="1"/>
                    <field name="discount_amount"/>
                    <field name="total"/>
                    
                </group>
                   <notebook>
                        
                    </notebook>
                   </sheet>
             </form>
         </field>
    </record>
    
        <record model="ir.ui.view" id="tgb_construction_construction_purchase_order_line_tree_view">
        <field name="name">construction.purchase.order.line.tree</field>
        <field name="model">construction.purchase.order.line</field>
        <field name="arch" type="xml">
            <tree string="construction_purchase_order_line" editable="top">
                <field name="type"/>
                <field name="product_id" required="1"/>
                <field name="remarks_description"/>
                <field name="qty"/>
                <field name="uom"/>
                <field name="pack_size"/>
                <field name="no_of_pack"/>
                <field name="sales_tax"/>
                <field name="unit_cost"/>
                <field name="location_id"/>
                <field name="discount_percent" readonly="1"/>
                <field name="discount_amount"/>
                <field name="total"/>
                
            </tree>
        </field>
    </record>
        <record id="tgb_construction_construction_purchase_order_line_action" model="ir.actions.act_window">
            <field name="name">construction_purchase_order_line</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">construction.purchase.order.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>
    
     </data>
</openerp>
