            </tree>
        </field>
    </record>
        <record id="tgb_construction_project_billing_products_action" model="ir.actions.act_window">
            <field name="name">project_billing_products</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project.billing.product</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>
    
     </data>
</openerp>
