<openerp>
    <data>

        <record id="stock_issue_tree" model="ir.ui.view">
            <field name="name">Stock Issue Tree</field>
            <field name="model">stock.issue</field>
            <field name="arch" type="xml">
                <tree string="Stock Issue">
                    <field name="si_voucher_no"/>
                    <field name="issue_type"/>
                    <field name="si_date"/>
                    <field name="stock_location"/>
                    <field name="res_user_id"/>
                    <field name="reference_no"/>
                </tree>
            </field>
        </record>


        <record id="stock_issue_form" model="ir.ui.view">
            <field name="name">Stock Issue Form</field>
            <field name="model">stock.issue</field>
            <field name="arch" type="xml">
                <form string="Stock Issue Form" version="7.0">
                    <sheet>
                        <group colspan="8" col="4">
                            <field name="si_voucher_no"/>
                            <field name="issue_type"/>
                            <field name="si_date"/>
                            <field name="stock_location"/>
                            <field name="res_user_id"/>
                            <field name="reference_no"/>
                        </group>
                        <notebook>
                            <page string="Employee">
                                <group>
                                    <field name="stock_issue_emp_line" nolabel="1"
                                           context="{'model_id': active_id}" widget="one2many_list"/>
                                </group>
                            </page>
                            <page string="Manufacturing">
                                <group col="4">
                                    <field name="si_source_voucher_no"/>
                                    <field name="si_source_pp_voucher_no"/>
                                    <field name="si_source_partial_pp_no"/>
                                    <field name="customer_id"/>
                                    <field name="finished_good"/>
                                    <field name="work_center_and_machine"/>
                                    <field name="schedule_start_date"/>
                                    <field name="schedule_start_end"/>
                                    <field name="require_stock_return"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="stock_issue_action" model="ir.actions.act_window">
            <field name="name">Stock Issue</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.issue</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>
        <menuitem name="Stock Issue"
                  id="menu_stock_issue" parent="menu_construction_inventory_menu"
                  action="stock_issue_action"/>

        <record id="stock_issue_emp_tree" model="ir.ui.view">
            <field name="name">Stock Issue Employee Tree</field>
            <field name="model">stock.issue.employee</field>
            <field name="arch" type="xml">
                <tree string="Stock Issue" editable="top">
                    <field name="subject_type"/>
                    <field name="sub_code"/>
                    <field name="sub_des"/>
                    <field name="product_id"/>
                    <field name="product_code"/>
                    <field name="qty_on_hand"/>
                    <field name="qty_available"/>
                    <field name="issue_qty"/>
                    <field name="pack_size"/>
                    <field name="no_of_pack"/>
                    <field name="serial_no"/>
                </tree>
            </field>
        </record>

        <record id="stock_issue_emp_form" model="ir.ui.view">
            <field name="name">Stock Issue Employee form</field>
            <field name="model">stock.issue.employee</field>
            <field name="arch" type="xml">
                <form string="Stock Issue">
                    <field name="subject_type"/>
                    <field name="sub_code"/>
                    <field name="sub_des"/>
                    <field name="product_id"/>
                    <field name="product_code"/>
                    <field name="qty_on_hand"/>
                    <field name="qty_available"/>
                    <field name="issue_qty"/>
                    <field name="pack_size"/>
                    <field name="no_of_pack"/>
                    <field name="serial_no"/>
                </form>
            </field>
        </record>


    </data>
</openerp>
