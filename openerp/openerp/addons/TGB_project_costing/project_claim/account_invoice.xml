        <record model="ir.ui.view" id="tgb_construction_account_invoice_form_view">
        <field name="name">account.invoice.form</field>
        <field name="model">account.invoice</field>
        <field name="arch" type="xml">
            <form string="account_invoice" version="7.0">
            <sheet>
                <group col="4">
                    <field name="project_id"/>
                    <field name="work_order_no"/>
                    <field name="customer_job_no"/>
                    <field name="project_type"/>
                    <field name="currency__currency"/>
                    <field name="exch_rate"/>
                    <field name="total_tax_amount"/>
                    <field name="total_home_amount"/>
                    <field name="invoice_type"/>
                    <field name="billing_type"/>
                    <field name="claim_type"/>
                    <field name="project_claim_id"/>
                    
                </group>
                   <notebook>
                        
                    </notebook>
                   </sheet>
             </form>
         </field>
    </record>
    
        <record model="ir.ui.view" id="tgb_construction_account_invoice_tree_view">
        <field name="name">account.invoice.tree</field>
        <field name="model">account.invoice</field>
        <field name="arch" type="xml">
            <tree string="account_invoice">
                <field name="project_id"/>
                <field name="work_order_no"/>
                <field name="customer_job_no"/>
                <field name="project_type"/>
                <field name="currency__currency"/>
                <field name="exch_rate"/>
                <field name="total_tax_amount"/>
                <field name="total_home_amount"/>
                <field name="invoice_type"/>
                <field name="billing_type"/>
                <field name="claim_type"/>
                <field name="project_claim_id"/>
                
            </tree>
        </field>
    </record>
        <record id="tgb_construction_account_invoice_action" model="ir.actions.act_window">
            <field name="name">account_invoice</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>
    
     </data>
</openerp>
