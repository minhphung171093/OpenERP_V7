            </field>
        </record>
        <record id="tgb_construction_material_requirements_planning_action" model="ir.actions.act_window">
            <field name="name">Material Requirements Planning</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">material.requirements.planning</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>
        <menuitem name="Material Requirements Planning"
                  id="meterial_requirements_planning_menu" parent="menu_construction_manufacturing_menu"
                  action="tgb_construction_material_requirements_planning_action"/>
    </data>
</openerp>
