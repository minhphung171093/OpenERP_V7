<?xml version="1.0"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="tgb_construction_material_requirements_planning_form_view">
            <field name="name">material.requirements.planning.form</field>
            <field name="model">material.requirements.planning</field>
            <field name="arch" type="xml">
                <form string="material_requirements_planning" version="7.0">
                    <sheet>
                        <group col="4">

                        </group>
                        <notebook>
                            <page string="Resource Planning Period">
                                <field name="resource_planning_period_ids"/>
                            </page>
                            <page string="Weekly Resource Requirements">
                                <field name="weekly_resource_requirement_ids"/>
                            </page>
                            <page string="Resource Requirement By MPS Voucher">
                                <field name="resource_requirement_by_mps_vou_ids"/>
                            </page>

                        </notebook>
                    </sheet>
                </form>
