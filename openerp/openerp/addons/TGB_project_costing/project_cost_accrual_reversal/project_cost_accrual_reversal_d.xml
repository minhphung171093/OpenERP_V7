<?xml version="1.0"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="tgb_construction_project_cost_accrual_reversal_detail_form_view">
            <field name="name">project.cost.accrual.reversal.detail.form</field>
            <field name="model">project.cost.accrual.reversal.detail</field>
            <field name="arch" type="xml">
                <form string="project_cost_accrual_reversal_detail" version="7.0">
                    <sheet>
                        <group col="4">
                            <field name="product_id"/>
                            <field name="product_description"/>
                            <field name="product_uom_id"/>
                            <field name="accrual_amount"/>
                            <field name="accrual_home_amount"/>
                            <field name="project_cost_accrual_reversal_id"/>
                        </group>
                        <notebook>
                            <page string ="Project Allocation Detail">
                                <group col="8">
                                    <field name = "project_cost_accrual_allocation_detail_ids" widget="one2many" nolabel="1">
                                        <tree string = "Project Allocation Detail" editable="top">
                                            <field name ="product_id"/>
                                            <field name ="line_item_seq_no"/>
                                            <field name ="alloc_accrual_amt"/>
                                            <field name ="alloc_accrual_home_amt"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="tgb_construction_project_cost_accrual_reversal_detail_tree_view">
            <field name="name">project.cost.accrual.reversal.detail.tree</field>
            <field name="model">project.cost.accrual.reversal.detail</field>
            <field name="arch" type="xml">
                <tree string="project_cost_accrual_reversal_detail">
                    <field name="product_id"/>
                    <field name="product_description"/>
                    <field name="product_uom_id"/>
                    <field name="accrual_amount"/>
                    <field name="accrual_home_amount"/>
                    <field name="project_cost_accrual_reversal_id" invisible="1"/>
                </tree>
            </field>
        </record>
        <record id="tgb_construction_project_cost_accrual_reversal_detail_action" model="ir.actions.act_window">
            <field name="name">project_cost_accrual_reversal_detail</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project.cost.accrual.reversal.detail</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>


    </data>
</openerp>
