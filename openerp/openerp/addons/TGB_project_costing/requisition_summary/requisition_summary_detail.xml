        <record id="tgb_construction_requisition_summary_detail_action" model="ir.actions.act_window">
            <field name="name">requisition_summary_detail</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">requisition.summary.detail</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>
    
     </data>
</openerp>
