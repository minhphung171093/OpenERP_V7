<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	<record id="transfer_root1" model = "ir.ui.view">
    		<field name="name">transfer.root.form</field>
    		<field name="model">transfer.root</field>
    		<field name="type">form</field>
    		<field name="arch" type="xml">
    			<form string="Transfer Root">
					<group colspan="4">
						<field name="name"/>
						<field name="participation_id" on_change="onchange_participation_id(participation_id)" context="{'name':name}"/>
						<field name="vehicle_id"/>						
						<field name="root_id" />
						<field name="old_point_id" on_change="onchange_old(participation_id)"/>
						<field name="new_point_id"/>						
					</group>
					<separator colspan="4"/>
                    <group colspan="4">
                        <label string="" colspan="2"/>
                        <button special="cancel" string="Close" icon="gtk-close" colspan="1"/>
                        <button  name="root_transfer"  string="Transfer" icon="gtk-ok" type="object" colspan="1"/>
                    </group>
				</form>
    		</field>
    	</record>
    	             
        <act_window 
			id="act_root_change"
			name="Change Root"
			res_model="transfer.root"
			src_model="student.student"
			view_mode="form" 
        	target="new" 
        	view_type="form"/>	
    </data>
</openerp>