<openerp>
    <data>
        <record id="view_falcon_partner_address_form1" model="ir.ui.view">
            <field name="name">falcon.partner.address.form1</field>
            <field name="model">falcon.partner.address</field>
            <field name="type">form</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <form string="Address">
                    <group colspan="4" col="6">
                        <field name="partner_id" colspan="2"/>
                        <newline/>
                        <field name="name"/>
                        <field domain="[('domain', '=', 'contact')]" name="title" widget="selection"/>
                    </group>
                    <group colspan="2" col="2">
                        <separator string="Postal Address" colspan="4" col="4"/>
                        <field name="type"/>
                        <field name="street"/>
                        <field name="street2"/>
                        <field name="street3"/>
                        <field name="street4"/>
                        <field name="zip"/>
                        <field name="city"/>
                        <field name="country_id"/>
                        <field name="state_name"/>
                    </group>
                    <group colspan="2" col="2">
                        <separator string="Communication" colspan="4" col="4"/>
                        <field name="phone"/>
                        <field name="phone2"/>
                        <field name="phone3"/>
                        <field name="fax"/>
                        <field name="email" widget="email"/>
                        <field name="website"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_falcon_partner_address_tree" model="ir.ui.view">
            <field name="name">falcon.partner.address.tree</field>
            <field name="model">falcon.partner.address</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Partner Addresses">
                    <field name="name"/>
                    <field name ="street"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name ="website"/>
                    <field name="zip"/>
                    <field name="city"/>
                    <field name="country_id"/>
                    <field name="type"/>
                </tree>
            </field>
        </record>

    </data>
</openerp>
